# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Python files
*.py text diff=python
*.pyi text diff=python
*.pyx text diff=python
*.pxd text diff=python
requirements*.txt text
Pipfile text
setup.py text
setup.cfg text
pyproject.toml text
pytest.ini text
tox.ini text

# Docker files
Dockerfile text
*.dockerfile text
.dockerignore text
docker-compose*.yml text
docker-compose*.yaml text

# Documentation
*.md text diff=markdown
*.rst text
*.txt text
*.html text diff=html
*.css text diff=css
*.js text
*.json text
*.yaml text
*.yml text
*.ini text
*.conf text
*.cfg text
*.toml text

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Configuration
.env.example text
.editorconfig text
.gitattributes text export-ignore
.gitignore text export-ignore
.pre-commit-config.yaml text

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Audio
*.mp3 binary
*.wav binary
*.flac binary
*.ogg binary

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Archives
*.7z binary
*.gz binary
*.tar binary
*.tgz binary
*.zip binary
*.rar binary

# Database
*.db binary
*.sqlite binary
*.sqlite3 binary

# Generated files
__pycache__/* binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary

# IDE files
.idea/* text
.vscode/* text
*.sublime-project text
*.sublime-workspace text

# Git specific files
.git/* export-ignore
.gitattributes export-ignore
.gitignore export-ignore
.github/* export-ignore

# Linguist overrides
*.py linguist-language=Python
Dockerfile linguist-language=Dockerfile
*.md linguist-documentation
docs/* linguist-documentation
tests/* linguist-vendored=false

# Diff settings
*.py diff=python
*.md diff=markdown
*.json diff=json
*.yaml diff=yaml
*.yml diff=yaml

# Merge settings
*.py merge=python
*.md merge=markdown
*.json merge=json
*.yaml merge=yaml
*.yml merge=yaml

# Large files
*.pdf filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
