# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Match Black's default
multi_line_output = 3  # Match isort's default
include_trailing_comma = true
force_grid_wrap = 0
use_parentheses = true
ensure_newline_before_comments = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4

# Makefile - requires tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 4

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# HTML/CSS/JavaScript (if needed for web interface)
[*.{html,css,js}]
indent_style = space
indent_size = 2

# Documentation
[docs/**]
indent_style = space
indent_size = 4
max_line_length = 80  # More readable for documentation

# Test files
[tests/**]
indent_style = space
indent_size = 4
max_line_length = 88

# Git files
[.git*]
indent_style = space
indent_size = 2

# CI/CD files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
