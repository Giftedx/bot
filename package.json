{
  "name": "osrs-game",
  "version": "1.0.0",
  "description": "A simple OSRS-like game client and server",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/server/index.js",
    "dev": "concurrently \"npm run watch\" \"npm run start\"",
    "serve-client": "http-server dist/client -p 8080"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "typescript": "^5.3.3"
  }
} 